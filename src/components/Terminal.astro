<style>
  .terminal-container {
    background-color: #1a1e23;
    border: 1px solid #30363d;
    border-radius: 8px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    max-width: 60rem;
    width: 100%;
    margin: 2rem auto 3rem auto;
    font-family: inherit;
    overflow: hidden;
  }

  .terminal-header {
    background-color: #21262d;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #30363d;
  }

  .terminal-buttons {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .btn {
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 50%;
  }

  .btn-close {
    background-color: #ff5f56;
  }

  .btn-minimize {
    background-color: #ffbd2e;
  }

  .btn-maximize {
    background-color: #27ca3f;
  }

  .terminal-title {
    color: #f0f6fc;
    font-size: 0.875rem;
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .terminal-body {
    padding: 1rem;
    font-size: 1rem;
    line-height: 1.625;
    min-height: 300px;
    overflow-x: auto;
  }

  .terminal-line {
    margin-bottom: 0.5rem;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .username {
    color: #7dd3fc;
    margin-right: 0;
  }

  .at-symbol {
    color: #f0f6fc;
    margin: 0;
  }

  .hostname {
    color: #fbbf24;
    margin: 0;
  }

  .path {
    color: #58a6ff;
    margin-right: 0.25rem;
  }

  .command {
    color: #f0f6fc;
    word-break: break-all;
  }

  .valid-command {
    color: rgb(var(--color-terminal-green));
  }

  .terminal-output {
    color: #e6edf3;
    margin-left: 1.5rem;
    margin-bottom: 1rem;
    word-wrap: break-word;
  }

  .terminal-permissions {
    color: rgb(var(--color-info));
  }

  .cursor-blink {
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%,
    50% {
      opacity: 1;
    }
    51%,
    100% {
      opacity: 0;
    }
  }

  /* Light mode adjustments */
  html[data-theme="light"] .terminal-container {
    background-color: #f8f9fa;
    border-color: #d0d7de;
  }

  html[data-theme="light"] .terminal-header {
    background-color: #e9ecef;
    border-bottom-color: #d0d7de;
  }

  html[data-theme="light"] .terminal-title {
    color: #1f2328;
  }

  html[data-theme="light"] .username {
    color: #0284c7;
  }

  html[data-theme="light"] .at-symbol {
    color: #1f2328;
  }

  html[data-theme="light"] .hostname {
    color: #d97706;
  }

  html[data-theme="light"] .path {
    color: #0969da;
  }

  html[data-theme="light"] .command {
    color: #1f2328;
  }

  html[data-theme="light"] .valid-command {
    color: rgb(var(--color-terminal-green));
  }

  html[data-theme="light"] .terminal-output {
    color: #656d76;
  }

  /* Mobile responsive styles */
  @media (max-width: 768px) {
    .terminal-container {
      margin: 1rem 0 3rem 0;
      border-radius: 6px;
      max-width: none;
    }

    .terminal-header {
      padding: 0.5rem 0.75rem;
      border-top-left-radius: 6px;
      border-top-right-radius: 6px;
    }

    .terminal-title {
      font-size: 0.75rem;
    }

    .btn {
      width: 0.625rem;
      height: 0.625rem;
    }

    .terminal-body {
      padding: 0.75rem;
      min-height: 250px;
    }

    .terminal-output {
      margin-left: 1rem;
    }
  }

  @media (max-width: 480px) {
    .terminal-container {
      margin: 0.5rem 0 3rem 0;
    }

    .terminal-header {
      padding: 0.5rem;
    }

    .terminal-title {
      font-size: 0.7rem;
    }

    .terminal-body {
      padding: 0.5rem;
      min-height: 200px;
    }

    .terminal-output {
      margin-left: 0.75rem;
    }

    .terminal-buttons {
      gap: 0.375rem;
    }

    .btn {
      width: 0.5rem;
      height: 0.5rem;
    }
  }
</style>
